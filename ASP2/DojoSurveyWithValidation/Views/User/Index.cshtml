@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Dojo Survey</title>
</head>
<body>
    <div class="Formpage">
        <div class="FormMain">
            <span style="color: red;" asp-validation-for="Name"></span><br>
            <span style="color: red;" asp-validation-for="Loc"></span><br>
            <span style="color: red;" asp-validation-for="Lang"></span><br>
            <span style="color: red;" asp-validation-for="Comment"></span><br>

            <form asp-action="Submit" asp-controller = "User" method = "post">
                <div class="form-group">
                    <label asp-for ="Name" >Your Name</label>
                    <input name="Name" asp-for ="Name" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for = "Loc">Dojo Location</label>
                    <select name="Loc" asp-for = "Loc" class="form-select" aria-label="Default select example">
                        <option >San Jose</option>
                        <option >SDA</option>
                        <option >Seattle</option>
                        <option >Online</option>
                    </select>
                </div>     
                <div class="form-group">
                    <label asp-for = "Lang">Favorite Language</label>
                    <select name="Lang" asp-for = "Lang" class="form-select" aria-label="Default select example">
                        <option value="c#" >C#</option>
                        <option value="python" >Python</option>
                        <option value="javascript" >JavaScript</option>
                        <option value="c++" >C++</option>
                    </select>
                </div> 
                <div class="form-group">
                    <label asp-for = "Comment">Comment (Optional)</label>
                    <textarea name="Comment" asp-for = "Comment" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <button class="btn btn-primary">Sumbit</button>       
    
            </form>                
        </div>
    </div>
</body>
</html>