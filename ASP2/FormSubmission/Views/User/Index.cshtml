@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form</title>
</head>
<body>
    <div class="Formpage">
        <div class="FormMain">
            <span style="color: red;" asp-validation-for="firstName"></span><br>
            <span style="color: red;" asp-validation-for="Password"></span><br>
            <span style="color: red;" asp-validation-for="lastName"></span><br>
            <span style="color: red;" asp-validation-for="Age"></span><br>
            <span style="color: red;" asp-validation-for="Email"></span><br>

            <form asp-action="Sumbit" asp-controller = "User" method = "post">
                <div class="form-group">
                    
                    <label >First Name</label>
                    <input name="firstName" type="text" class="form-control">
                </div>
                <div class="form-group">
                    
                    <label >Last Name</label>
                    <input name="lastName" type="text" class="form-control">
                </div>     
                <div class="form-group">
                    
                    <label >Age</label>
                    <input name="Age" type="number" class="form-control">
                </div> 
                <div class="form-group">
                    
                    <label >Email Address</label>
                    <input name="Email" type="Email" class="form-control">
                </div>
                <div class="form-group">
                    
                    <label >Password</label>
                    <input name="Password" type="Password" class="form-control">
                </div>
                <button class="btn btn-primary">Sumbit</button>       
    
            </form>                
        </div>
    </div>
    
</body>
</html>
