@model Wedding
<p><a href="/dashboard">Dashboard</a> | <a href="/logout">Logout</a></p>

    <div style=" display: flex; justify-content: space-evenly;" >
    <div >
        <h3>Add Wedding</h3>
        <form asp-action="Create" asp-controller="Wedding" method="post">
            <div class="form-group">
                <p><span style="color: red;" asp-validation-for="Wedder1"></span></p>
                <label asp-for="Wedder1">Wedder one</label>
                <input asp-for="Wedder1" type="text" class="form-control"/>
            </div>
            <div class="form-group">
                <p><span style="color: red;" asp-validation-for="Wedder2"></span></p>
                <label asp-for="Wedder2">Wedder two</label>
                <input asp-for="Wedder2" type="text" class="form-control"/>
            </div>
            <div class="form-group">
                <p><span style="color: red;" asp-validation-for="Date"></span></p>
                <label asp-for="Date">Date</label>
                <input asp-for="Date" type="Date" class="form-control" />
            </div>
            <div class="form-group">
                <p><span style="color: red;" style="color: red;" asp-validation-for="WeddingAddress"></span></p>
                <label asp-for="WeddingAddress">Wedding Address</label>
                <input asp-for="WeddingAddress" type="text" class="form-control"/>
            </div>
           
            <button class="btn btn-primary">Create</button>
        </form>
    </div>
    </div>