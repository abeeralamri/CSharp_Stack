@model User

    <div style=" display: flex; justify-content: space-evenly;" >
    <div >
        <h3>Register</h3>
        <form asp-action="Register" asp-controller="User" method="post">
            <div class="form-group">
                <p><span style="color: red;" asp-validation-for="FName"></span></p>
                <label asp-for="FName">First Name</label>
                <input asp-for="FName" type="text" class="form-control"/>
            </div>
            <div class="form-group">
                <p><span style="color: red;" asp-validation-for="LName"></span></p>
                <label asp-for="LName">Last Name</label>
                <input asp-for="LName" type="text" class="form-control"/>
            </div>
            <div class="form-group">
                <p><span style="color: red;" asp-validation-for="Email"></span></p>
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" />
            </div>
            <div class="form-group">
                <p><span style="color: red;" style="color: red;" asp-validation-for="Password"></span></p>
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control"/>
            </div>
            <div class="form-group">
                <p><span style="color: red;" asp-validation-for="Confirm"></span></p>
                <label asp-for="Confirm"></label>
                <input asp-for="Confirm" class="form-control" />
            </div>
            <button class="btn btn-primary">Register</button>
        </form>
    </div>
           <div>
                <partial name="LoginUser" />

           </div>               
    </div>