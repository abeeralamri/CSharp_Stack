@model Login;
<h3>
    Login
</h3>
<form asp-action="Login" asp-controller="User" method="post">
    <div class="form-group">
        <p><span style="color: red;" asp-validation-for="LoginEmail"></span></p>
        <label asp-for="LoginEmail">Email</label>
        <input asp-for="LoginEmail" type="email" class="form-control" />
    </div>
    <div class="form-group">
        <p><span style="color: red;" asp-validation-for="LoginPassword"></span></p>
        <label asp-for="LoginPassword">Password</label>
        <input asp-for="LoginPassword" type="password" class="form-control"/>
    </div>
    <button class="btn btn-primary">Login</button>

</form>