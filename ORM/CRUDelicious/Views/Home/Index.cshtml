@model Dish
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Dishes</title>
</head>
<body>
    
    <h1 style="text-align: center;">Welcome to CRUDelicious</h1>
    <div>
            <div style="display:flex; margin-bottom:30px; margin-top:50px">
                <h4 style="margin-right: 100px;">Check out some recent dishes!</h4>
                <a href="/create">Add a Dish</a>
            </div>
            <hr style="width:600px; margin-bottom:30px;">
            @foreach (var dish in ViewBag.listDishes)
            {
                <div style="display:flex;">
                    <a style="margin-right: 10px;" href="/info/@dish.DishesId">@dish.Name</a>
                    <p>By @dish.Chef</p>
                </div>
            }
    </div>

</body>
</html>