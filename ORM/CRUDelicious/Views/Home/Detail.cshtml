@model Dish
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Dishes</title>
</head>
<body>
    
    <div style=" display:flex;">
            <a href="/">Home</a>
            <h1 style="margin-left: 450px;">@Model.Name</h1>
            
    </div>

    <div>
        <h5 style="margin-left:530px;">@Model.Chef</h5>
        <hr style="width:600px; margin-bottom:50px; margin-left:250px">
    </div>

    <div style="margin-left:400px; margin-bottom:50px">    
        <p>@Model.Desc</p>
        <p>Calories : @Model.Calorie</p>
        <p>Tastiness : @Model.Tastiness</p>
    </div>
    <div style="margin-left:445px;">
        <a href="/edit/@Model.DishesId"><button style="margin-right: 100px;" class="btn btn-dark">Edit</button></a> 
        <a href="/delete/@Model.DishesId"> <button class="btn btn-danger">Delete</button></a>
    </div>

</body>
</html>