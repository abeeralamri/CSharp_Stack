@model Dish
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Create Dishes</title>
</head>
<body>
     <div style=" display:flex;">
                    <a href="/">Home</a>
                    <h1 style="margin-left: 450px;">Edit @Model.Name</h1>
                    
            </div> 
    <div style="margin-bottom = 50px" class="Formpage">
        <div class="FormMain">
            <span style="color: red;" asp-validation-for="Calorie"></span><br>
            <span style="color: red;" asp-validation-for="Chef"></span><br>
            <span style="color: red;" asp-validation-for="Name"></span><br>
            <span style="color: red;" asp-validation-for="Tastiness"></span><br>
            <span style="color: red;" asp-validation-for="Desc"></span><br>


            <form  asp-action="UpdateDishes" asp-controller = "Home" method = "post">
                <div class="form-group">
                    <label asp-for ="Chef" >Chef's Name</label>
                    <input name="Chef" asp-for ="Chef" type="text" class="form-control" value="@Model.Chef">
                </div>
                <div class="form-group">
                    <label asp-for = "Name">Name of Dish</label>
                   <input name="Name" asp-for ="Name" type="text" class="form-control" value="@Model.Name">
                </div>    
                <div class="form-group">
                    <label asp-for = "Calorie">Number of Calories</label>
                   <input name="Calorie" asp-for ="Calorie" type="number" class="form-control"value="@Model.Calorie">
                </div> 
                <div class="form-group">
                    <label asp-for = "Tastiness">Tastiness</label>
                    <select name="Tastiness" asp-for = "Tastiness" class="form-select" aria-label="Default select example" value="@Model.Tastiness">
                        <option value="1" >1</option>
                        <option value="2" >2</option>
                        <option value="3" >3</option>
                        <option value="4" >4</option>
                        <option value="5" >5</option>
                    </select>
                </div> 
                <div class="form-group">
                    <label asp-for = "Desc">Description</label>
                    <textarea name="Desc" asp-for = "Desc" cols="30" rows="10" class="form-control" value="@Model.Desc"></textarea>
                </div>
                <button style = "margin-bottom = 20px"class="btn btn-primary">Update</button>       
    
            </form>                
        </div>
    </div>
</body>
</html>