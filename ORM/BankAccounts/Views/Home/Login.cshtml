@model User

    <div style="margin-bottom = 50px" class="Formpage">
        <div style=" display:flex;">
            <h1 style="margin-left: 400px; margin-right: 100px;">Login!</h1>
            <a  href="/">Register</a>
        </div> 
        <div class="FormMain" style="width:400px">
            @{
                if (ViewBag.ErrorMsg != null)
                {
                    <p class="text-danger">@ViewBag.ErrorMsg</p>
                }
            }
            <span style="color: red;" asp-validation-for="Email"></span><br>
            <span style="color: red;" asp-validation-for="Password"></span><br>
    
            <form  asp-action="LoginP" asp-controller = "Home" method = "post">

                <div class="form-group">
                    <label asp-for = "Email">Email</label>
                    <input name="Email" asp-for ="Email" type="text" class="form-control">
                </div> 
                <div class="form-group">
                    <label asp-for = "Password">Password</label>
                    <input name="Password" asp-for ="Password" type="password" class="form-control">
                </div> 
                <button style = "margin-bottom = 20px"class="btn btn-primary">Sign in</button>       
                
            </form>                
        </div>
    </div>